@using PosMvcFinal.Models
@model PosMvcFinal.Models.Item
@{
    ViewBag.Title = "AddItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Item</h2>
@using (@Html.BeginForm("StoreItem", "Pos"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name, "Name")
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price, "Price")
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Stock, "Inventory")
        @Html.TextBoxFor(m => m.Stock, new { @class = "form-control" })

    </div>

    <button type="submit" class="btn btn-primary">Add</button>
}
@Html.ActionLink("Go Back", "ShowItem", "Pos")

