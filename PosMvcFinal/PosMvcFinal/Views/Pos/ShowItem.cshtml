@using System.Activities.Expressions
@using PosMvcFinal.Models
@model IEnumerable<PosMvcFinal.Models.Item>

@{
    ViewBag.Title = "ShowItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Items</h2>



@if (Model.Count() == 0)
    {
        <p>No item has inserted</p>
    }
    else
    {
    <div class="cover">
        @foreach (var item in Model)
        {

            <div class="col-md-4 col-lg-4 box">
                <h4>@item.Name</h4>
                <p style="margin-bottom:2%;">@item.Price</p>

                <div class="col-md-6" style=" border:1px solid coral;padding-left: 0px;padding-right: 0px;">
                    @using (@Html.BeginForm("Edit", "Pos", new { id = @item.Id }))
                    {
                        <button type="submit" class="btn btn-lg btn-info">Edit</button>
                    }

                </div>

                <div class="col-md-6" style="border:1px solid coral;padding-left: 0px;padding-right: 0px;">
                    @using (@Html.BeginForm("Delete", "Pos", new { id = @item.Id }))
                    {
                        <button type="submit" class="btn btn-lg btn-info">Delete</button>
                    }

                </div>
            </div>

        }
        </div>
    }

<div>
    <div id="add">
        @using (@Html.BeginForm("AddItem", "Pos"))
        {
            <button type="submit" class="btn btn-primary">Add Item +</button>
        }
    </div>
    <div id="logout">
        @using (@Html.BeginForm("Index", "Pos"))
        {
            <button type="submit" class="btn btn-primary">Log Out</button>
        }
    </div>
</div>







<style>
.box{
	margin: 0;
	padding: 0;
	text-align: center;
	background-color: #d2d2d2;
    width: 20%;
    border: 1px solid burlywood;
}
.btn-group-lg>.btn, .btn-lg {
    width: 100%;
    padding: 10px 16px;
    font-size: 18px;
    line-height: 1.3333333;
    border-radius: 6px;
}
#add {
    float: left;
}
#logout {
    float: right;
}
.cover {
    width: 100%;
}

    
</style>