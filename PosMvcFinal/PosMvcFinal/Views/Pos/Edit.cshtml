@using PosMvcFinal.Models
@model PosMvcFinal.Models.Item
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (@Html.BeginForm("Update", "Pos", new {id = Model.Id}))
{
    <h3>@Model.Name</h3>
    <div class="form-group">
        @Html.LabelFor(m => m.Price, "Price")
        @Html.TextAreaFor(m => m.Price, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Stock,"Quantity")
        @Html.TextAreaFor(m => m.Stock, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>

}

@Html.ActionLink("Go Back", "ShowItem", "Pos")