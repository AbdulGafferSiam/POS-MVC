@using Microsoft.Ajax.Utilities
@using PosMvcFinal.Migrations
@using PosMvcFinal.Models
@model IEnumerable<PosMvcFinal.Models.Item>
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Parchases Item</h2>

<div>
    <table id="t01">
        
        <thead>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Enter Quantity</th>
            <th>Action</th>
        </thead>

        @foreach (var item in Model)
        {
            if ((int)Session["itemId"] == item.Id)
            {
                <tr>
                    @using (@Html.BeginForm("Buy", "Pos", new { Id = item.Id }))
                    {
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @item.Stock
                        </td>
                        <td>
                            @Html.TextBox("Quantity", 0)
                        </td>
                        
                        <td>
                            <button type="submit">Buy</button>

                        </td>
                    }
                </tr>
            }
        }

    </table>
</div>

@Html.ActionLink("<= Go back", "ShowItemForCustomer")



<style>
    table#t01 {
        width: 100%;
        background-color: #f1f1c1;
    }

        table#t01 tr:nth-child(even) {
            background-color: #a7aaaf;
        }

        table#t01 tr:nth-child(odd) {
            background-color: #dce0e8;
        }

        table#t01 th {
            color: white;
            background-color: #8342f4;
        }

    table, th, td {
        border: 1px solid #41f45c;
        border-collapse: collapse;
    }

    th, td {
        text-align: center;
        padding: 15px;
    }
</style> 